{
  "name": "finance_manager",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
  "dev": "bunx npm-run-all -p dev:backend dev:frontend",
  "dev:backend": "bun run -F @finance-manager/backend dev",
  "dev:frontend": "bun run -F @finance-manager/frontend dev",
    "build:backend": "bun --cwd apps/backend run build",
    "build:frontend": "bun --cwd apps/frontend run build",
    "install:all": "bun install",
    "clean": "bun --cwd apps/backend run clean && bun --cwd apps/frontend run clean"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
